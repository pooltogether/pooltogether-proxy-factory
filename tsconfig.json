{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "declaration": true
    },
    "include": [
        "hardhat.config.ts",
        "hardhat.network.ts",
        "./deploy",
        "./scripts",
        "./test",
        "types/**/*",
        "Constant.ts",
        "./src/*"
    ],
    "exclude":[
        "node_modules"
    ]
}
